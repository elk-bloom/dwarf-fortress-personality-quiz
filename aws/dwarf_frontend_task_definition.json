{
    "family": "dwarf-frontend",
    "containerDefinitions": [
        {
            "name": "dwarf-frontend",
            "image": "your-docker-image-repo/dwarf-frontend:latest",
            "essential": true,
            "memory": 512,
            "cpu": 256,
            "portMappings": [
                {
                    "containerPort": 4321,
                    "hostPort": 4321
                }
            ],
            "environment": [
                {
                    "name": "APP_API_DOMAIN",
                    "value": "dwarf-backend.service-connect"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/service-connect-dwarf-frontend",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "dwarf-frontend"
                }
            } 
        }
    ],
    "requiresCompatibilities": ["FARGATE"],
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::your-account-id:role/ecsTaskExecutionRole",
    "cpu": "256",
    "memory": "512"
}